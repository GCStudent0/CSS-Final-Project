/* Media Query to adjust page when below 1060 width */
/* Adjust grid layout */
@media screen and (max-width: 720px){
    
    body{
    /* Adjust grid layout */
    display: grid;
    gap: 1vw;
    grid-template-columns: 1fr;
    grid-template-areas:
    "header"
    "nav"
    "main"
    "asideProfile"
    "asideStyles"
    "footer"
    "skipLink";
    }
    /* Adjust position of skip-link */
    .skip-link{
        margin-left: 0vw;
    }

    /* Adjust gap and wrap in flexboxes */
    nav ul{
        gap: 7vw;
    }
    .profile ul{
        gap: 7vw;
    }
    #styles ul{
        gap: 7vw;
    }
    footer ul{
        gap: 7vw;
    }
    /* Adjust size of border box inside main */
    main section ul{
        list-style-type: none;
    }

}
