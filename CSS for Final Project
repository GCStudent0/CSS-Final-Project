html {
    /*Apply box sizing, base font size, line height, and default font*/
    /* Apply box sizing */
	box-sizing: border-box;

    /*Default font*/
    font-family: Georgia, 'Times New Roman', Times, serif;

    /* Default font size*/
    font-size: 120%;

    /*Default line height*/
    line-height: 1.4;

    /* Apply smooth scrolling */
    scroll-behavior: smooth;
}

/* Apply box sizing */
*, *:before, *:after {
    box-sizing: inherit;
    }

/* Font for all headers */
h1,h2,h3,h4{
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
}

/* Apply base styling to body and set up grid*/
body{
    margin: auto 3vw;
    /* Background color in case image fails. */
    background-color: pink;
    
    /* Wonderful background image found here https://www.vecteezy.com/vector-art/957764-seamless-watermelon-pattern */
    background-image: url(seamless-watermelon-pattern-vector-754240117.jpg);
    background-size: 60vw;

    /*********** Control grid areas ***************/
    display: grid;
    gap: 1vw;
    grid-template-columns: 1fr 1fr;
    grid-template-areas:
    "header       header"
    "nav          nav"
    "main         main"
    "main         main"
    "asideProfile asideStyles"
    "footer       footer"
    "skipLink     skipLink";
}

/********* CSS for Header area *************/
/* Set header as grid area header, adjust positioning, align text, adjust font size, apply styling */
header{
    grid-area: header;

    margin-top: 1vw;
    padding: 1vw;

    text-align: center;

    background-color: #f04951e1;
    border-style:solid;
    border-color: green;
    border-width: 5px;
    border-radius: 5vw;
}

/* Adjust size and position of h1*/
header h1{
    margin-top: -0.5vw;
    font-size: 40px;
}

/* Adjust position of h2 */
header h2{
    margin-top: -2vw;
}

header a{
    color: papayawhip;
    background-color: green;
    padding: 0.2vw;
}

header a:hover, header a:active{
    color: black
}

/************ CSS for Nav area ************/
nav{
    grid-area: nav;

    margin-top: 1vw;
    padding: 1vw;

    justify-content: center;

    background-color: #f04951e1;
    border-style:solid;
    border-color: green;
    border-width: 5px;
    border-radius: 5vw;
}

/* Put list into flexbox and style*/
nav ul{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    list-style-type: "\1F349";
}

/* Style links in list. */
nav a{
    color:papayawhip;
    background-color: green;
    padding: 0.4vw;
}

nav a:hover, nav a:active{
    color: black;
}

